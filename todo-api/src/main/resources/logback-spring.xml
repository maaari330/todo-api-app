<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- Spring プロファイルに応じた設定が可能 -->
  <springProfile name="default, dev">

    <!-- Console Appender 定義 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
        <!-- %ex{full} で WARN/ERROR 時にフルスタックトレースを出力 -->
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n%ex{full}</pattern>
      </encoder>
    </appender>

    <!-- ルートロガーにアタッチ -->
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
    </root>

  </springProfile>

</configuration>
